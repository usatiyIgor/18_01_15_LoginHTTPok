<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.den.a18_01_15_loginhttpok.ContactView">
    <TextView
        android:id="@+id/view_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_email"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/view_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_name"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_phone"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/view_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_description"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_email"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_name"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_phone"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_description"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:visibility="invisible"/>


    <FrameLayout
        android:id="@+id/my_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0ffffff"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</RelativeLayout>
